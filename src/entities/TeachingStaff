package entities;

import javax.persistence.Basic;
import javax.persistence.Column;
import javax.persistence.DiscriminatorValue;
import javax.persistence.Entity;
import javax.persistence.PrimaryKeyJoinColumn;
import javax.persistence.Table;

@Entity
@PrimaryKeyJoinColumn(referencedColumnName = "sid")
//@DiscriminatorValue(value = "TS")
public class TeachingStaff extends Staff {
	
	Staff staff = new Staff();
	@Basic
	@Column
	private String qualification;
	@Basic
	@Column
	private String subjectExpertise;
	
	public TeachingStaff() {
		super();
		// TODO Auto-generated constructor stub
	}

	public TeachingStaff(int sid, String type, String sName) {
		super(sid, type, sName);
		// TODO Auto-generated constructor stub
	}
	
	public TeachingStaff(Staff staff, String qualification, String subjectExpertise) {
		super();
		this.staff = staff;
		this.qualification = qualification;
		this.subjectExpertise = subjectExpertise;
	}
	
	@Override
	public String toString() {
		return "TeachingStaff [staff=" + staff + ", qualification=" + qualification + ", subjectExpertise="
				+ subjectExpertise + "]";
	}
	
	public Staff getStaff() {
		return staff;
	}
	public void setStaff(Staff staff) {
		this.staff = staff;
	}
	public String getQualification() {
		return qualification;
	}
	public void setQualification(String qualification) {
		this.qualification = qualification;
	}
	public String getSubjectExpertise() {
		return subjectExpertise;
	}
	public void setSubjectExpertise(String subjectExpertise) {
		this.subjectExpertise = subjectExpertise;
	}
	
	
}
